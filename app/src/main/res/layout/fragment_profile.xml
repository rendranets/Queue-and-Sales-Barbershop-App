<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:id="@+id/fragment_profil">

    <TextView
        android:id="@+id/profile"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textColor="@color/dark_dark_gray"
        android:textSize="32sp"
        android:textStyle="bold" />

<!--    <View-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="250dp"-->
<!--        android:background="@color/white"-->
<!--        />-->

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/update"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_profil"
        />

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_toStartOf="@id/edit_profil"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/report_profile"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="100dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/profile_update"
        android:layout_centerHorizontal="true"/>


         <ImageView
            android:id="@+id/profile_name_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/profile_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/name"
             android:layout_marginTop="90dp"
             />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/nama_lengkap"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/profile_name_image"
            android:layout_toEndOf="@id/profile_name_image"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/profile_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_lengkap"
            android:textColor="@color/dark_dark_gray"
            android:textSize="16sp"
            android:layout_alignTop="@id/profile_name_image"
            android:layout_toEndOf="@id/profile_name"
            android:layout_marginStart="10dp"
        />

        <ImageView
            android:id="@+id/profile_email_image"
            android:layout_marginTop="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/profile_name_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/email_1"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/profile_email_image"
            android:layout_alignTop="@id/profile_email_image"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/profile_email_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/dark_dark_gray"
            android:textSize="16sp"
            android:layout_toEndOf="@id/profile_email"
            android:layout_alignTop="@id/profile_email_image"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/profile_phone_image"
            android:layout_marginTop="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/profile_email"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/phone"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/profile_phone_image"
            android:layout_toEndOf="@id/profile_phone_image"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/profile_phone_user"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/dark_dark_gray"
            android:textSize="16sp"
            android:layout_alignTop="@id/profile_phone_image"
            android:layout_toEndOf="@id/profile_phone"
            android:layout_marginStart="10dp"
            />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@id/profile_phone_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        />

         <TextView
            android:id="@+id/admin_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignStart="@id/profile_phone_image"
            android:layout_below="@id/profile_phone_image"
         />

        <View
            android:id="@+id/line_admin_panel"
            android:layout_width="95sp"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_alignStart="@id/profile_phone_image"
            android:layout_below="@id/admin_panel"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            />

       <Button
            android:id="@+id/logout_btn"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/button_style"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
</RelativeLayout>